#!/bin/bash

if [ "$1" == "on" ]; then
    xrandr --output DP-0 --mode 1280x720 --pos 0x0 --rotate normal --output DP-4 --off
    flatpak run dev.lizardbyte.app.Sunshine
elif [ "$1" == "off" ]; then
    # pkill -f "sunshine"
    xrandr --output DP-0 --mode 1920x1080 --pos 1920x0 --rotate normal --rate 144 \
           --output DP-4 --primary --mode 1920x1080 --pos 0x0 --rotate normal --rate 144
else
    echo "Usage: $0 [on|off]"
    exit 1
fi
