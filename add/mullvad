#!/bin/bash
set -e

URL="https://mullvad.net/en/download/app/deb/latest"
TMP_DEB="/tmp/mullvad.deb"

echo "Downloading Mullvad VPN…"
curl -L "$URL" -o "$TMP_DEB"

echo "Installing package…"
sudo apt install -y "$TMP_DEB"

echo "Creating command symlinks…"
sudo ln -sf "/opt/Mullvad VPN/mullvad-vpn" /usr/local/bin/mullvad-vpn
sudo ln -sf "/opt/Mullvad VPN/mullvad-gui" /usr/local/bin/mullvad-gui

echo "Cleaning up…"
rm -f "$TMP_DEB"

echo "Mullvad VPN installed successfully."
