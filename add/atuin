#!/bin/bash

sudo apt update

echo "Starting Atuin installation..."

sudo apt install -y curl

curl --proto '=https' --tlsv1.2 -LsSf https://setup.atuin.sh | sh

export PATH="$HOME/.atuin/bin:$PATH"

if command -v atuin &> /dev/null; then
    echo "Atuin version $(atuin --version) installed successfully!"
    echo "Installation complete. Please restart your shell or run: source ~/.zshrc"
else
    echo "Installation failed or atuin is not in the PATH."
fi

