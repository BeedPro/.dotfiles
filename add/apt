#!/bin/bash
sudo apt update

CORE_UTILS=(
  zsh
  tmux
  vim
  git
  curl
  stow
  eza
  bat
  git-lfs
  python3-venv
  pipx
)

SYSTEM=(
  acpi
  brightnessctl
  libnotify-bin
  network-manager
  network-manager-applet
  lxpolkit
  pulsemixer
  aspell
  aspell-en
)

X11_TOOLS=(
  picom
  feh
  xss-lock
  dunst
  nwg-look
  maim
  x11-xkb-utils
  xclip
  xdotool
)

MEDIA=(
  mpd
  mpc
  mpv
  nsxiv
  zathura
  xournalpp
  libavcodec-extra
  farbfeld
)

THEME=(
  adwaita-qt
  adwaita-icon-theme-full
  gnome-themes-extra
)

echo "Installing all packages..."
sudo apt install -y "${CORE_UTILS[@]}" "${SYSTEM[@]}" "${X11_TOOLS[@]}" "${MEDIA[@]}" "${THEME[@]}"

if [ -f /usr/bin/batcat ]; then
  sudo ln -sf /usr/bin/batcat /usr/local/bin/bat
fi

if [ -f /usr/bin/mpd ]; then
  mkdir -p $HOME/.local/share/mpd/playlists
  mkdir -p $HOME/.cache/mpd
  mkdir -p $HOME/.config/mpd
fi

echo "Installation complete!"
