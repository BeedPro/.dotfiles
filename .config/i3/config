bindsym $mod+Shift+3 move container to workspace number $ws3; workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4; workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5; workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6; workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7; workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8; workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9; workspace number $ws9

bindsym $mod+Mod1+r reload
bindsym $mod+Mod1+Shift+r restart
bindsym $mod+Mod1+c exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# Theme: Auto-script switcher

# Light
set $base        #f2f1ef
set $text        #545464
set $surface2    #c9cbd1
set $overlay0    #8a8980

set $accent      #4d699b
set $indicator   #b35b79
set $alert       #e82424
set $warning     #e98a00

# class                  border      bg         text     indicator    child_border
client.focused           $accent     $accent    $base    $indicator   $accent
client.focused_inactive  $overlay0   $accent    $base    $indicator   $overlay0
client.unfocused         $overlay0   $base      $text    $indicator   $overlay0
client.urgent            $warning    $warning   $base    $overlay0    $warning
client.placeholder       $overlay0   $accent    $base    $overlay0    $overlay0
client.background        $base

bar {
  status_command i3blocks
  colors {
    background         $base
    statusline         $text
    focused_statusline $text
    focused_separator  $base

    # target           border bg        text
    focused_workspace  $base  $accent   $base
    active_workspace   $base  $surface2 $text
    inactive_workspace $base  $base     $text
    urgent_workspace   $base  $alert    $base
  }
}
