set $mod Mod4

font pango:monospace 12

exec --no-startup-id dex --autostart --environment i3
exec --no-startup-id ~/.local/share/autostart.sh

workspace 1 output DP-4
workspace 2 output DP-0
workspace 3 output DP-4
workspace 4 output DP-4
workspace 5 output DP-0
workspace 6 output DP-4
workspace 7 output DP-4
workspace 8 output DP-4
workspace 9 output DP-4

for_window [class="discord"] border normal

assign [class="KeePassXC"] number 8
assign [class="eu.betterbird.Betterbird"] number 9

for_window [title="^floating$"] floating enable
for_window [class="^floating$"] floating enable
for_window [instance="^floating$"] floating enable

floating_modifier $mod
tiling_drag modifier titlebar

bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86MonBrightnessUp   exec --no-startup-id ~/.local/scripts/brightness up
bindsym XF86MonBrightnessDown exec --no-startup-id ~/.local/scripts/brightness down
bindsym XF86AudioRaiseVolume exec --no-startup-id ~/.local/scripts/volume up
bindsym XF86AudioLowerVolume exec --no-startup-id ~/.local/scripts/volume down
bindsym XF86AudioMute exec --no-startup-id ~/.local/scripts/volume mute
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle
bindsym $mod+F12 exec --no-startup-id ~/.local/scripts/xswapkb
bindsym Print exec --no-startup-id ~/.local/scripts/screenshot.sh selection
bindsym $mod+Print exec --no-startup-id ~/.local/scripts/screenshot.sh window
bindsym $mod+Shift+Print exec --no-startup-id ~/.local/scripts/screenshot.sh screen
bindsym $mod+Tab workspace back_and_forth

bindsym $mod+Return exec --no-startup-id alacritty
bindsym $mod+w exec --no-startup-id firefox
bindsym $mod+Shift+w exec --no-startup-id firefox --private-window
bindsym $mod+n exec --no-startup-id alacritty -e nvim -c ":Org agenda"
bindsym $mod+Shift+n exec --no-startup-id alacritty -e nvim -c ":Org capture"

bindsym $mod+x exec --no-startup-id i3lock -c "#000000"

bindsym $mod+Shift+x exec --no-startup-id ~/.local/scripts/powermenu.sh
bindsym $mod+Shift+c exec --no-startup-id ~/.local/scripts/killmenu.sh

bindsym $mod+c kill

bindsym $mod+space exec --no-startup-id rofi -show drun

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+control+h resize shrink width 5 px or 5 ppt
bindsym $mod+control+j resize grow height 5 px or 5 ppt
bindsym $mod+control+k resize shrink height 5 px or 5 ppt
bindsym $mod+control+l resize grow width 5 px or 5 ppt

bindsym $mod+b split h
bindsym $mod+v split v

bindsym $mod+m fullscreen toggle

bindsym $mod+s layout stacking
bindsym $mod+t layout tabbed
bindsym $mod+e layout toggle split

bindsym $mod+Shift+f floating toggle

bindsym $mod+f focus mode_toggle

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"

bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9

